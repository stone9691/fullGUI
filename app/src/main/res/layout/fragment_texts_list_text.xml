<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/fragment_texts_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="house compact" />

        <TextView
            android:id="@+id/fragment_texts_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FullChinese Topics" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_weight="0.87"
        android:gravity="right|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_texts_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/5/17" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_texts_list_download"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_download_finish" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/fragment_texts_list_downloading"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                app:indicatorColor="@color/LightGray"
                app:indicatorName="BallSpinFadeLoaderIndicator" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_weight="0.1"
        android:src="@drawable/ic_right_arrow" />
</LinearLayout>
